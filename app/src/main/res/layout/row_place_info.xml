<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/lyt_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">


    <ImageView
        android:id="@+id/iv_place_image"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:layout_weight="0.2"
        android:src="@drawable/ic_place_icon"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/tv_place_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkBlue_text_strong"
            android:text="Default African Cuisine"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_place_checkins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkBlue_text_medium"
            android:text="28 Children"/>

        <TextView
            android:id="@+id/tv_place_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkBlue_text_weak"
            android:text="Creche"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="0.2"
        android:text="{0.0 KM}"
        android:textColor="@color/darkBlue_text_weak" />

</LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/shape_red_line_thin"
        />
</LinearLayout>