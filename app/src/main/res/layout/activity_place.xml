<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_bg">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_height="45dp"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/red"
            android:elevation="0dp"
            app:theme="@style/MyToolbarDark"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/tv_place_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get it now while you can"
                android:textStyle="bold"
                tools:ignore="MissingPrefix"
                fontPath="fonts/GothamRoundedBook.ttf"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

        </android.support.v7.widget.Toolbar>




                <com.veinhorn.scrollgalleryview.ScrollGalleryView
                    android:layout_below="@+id/my_toolbar"
                    android:id="@+id/sgv_image_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/ic_element_background"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:padding="5dp"
                    />
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/sgv_image_gallery"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llyt_place_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_element_background">

                <ImageView
                    android:id="@+id/iv_desc_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_gravity="top|center_horizontal"
                    android:src="@drawable/ic_info_outline_black_48dp"/>

                <at.blogc.android.views.ExpandableTextView
                    android:id="@+id/etv_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_vertical"
                    android:text="Description"
                    android:textColor="@color/darkRed_text_strong"
                    android:textSize="14sp"
                    app:animation_duration="750"
                    android:maxLines="5"/>
                <ImageView
                    android:id="@+id/iv_desc_toogle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_expand_more_black_36dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llyt_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_element_background">

                <ImageView
                    android:id="@+id/iv_location_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_gravity="top|center_horizontal"
                    android:src="@drawable/ic_map_black_48dp"/>
                <LinearLayout
                    android:id="@+id/llyt_location_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_default_address"
                        android:textSize="14sp"
                        android:textColor="@color/darkRed_text_strong"/>
                    <TextView
                        android:id="@+id/tv_place_link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/text_default_link"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimary"/>
                    <TextView
                        android:id="@+id/tv_place_checkins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="50 checkins"
                        android:textSize="10sp"
                        android:textColor="@color/darkRed_text_strong"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_directions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_directions_black_48dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="5dp"
                    />
            </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>